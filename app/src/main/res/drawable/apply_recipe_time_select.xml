<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/comm_blue" android:startColor="@color/comm_blue" />

            <corners android:radius="@dimen/layout_margin_ls" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/comm_white_gary" android:startColor="@color/comm_white_gary" />
            <corners android:radius="@dimen/layout_margin_ls" />
        </shape>
    </item>

</selector>