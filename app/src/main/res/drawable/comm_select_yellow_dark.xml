<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="#BE9850" android:startColor="#BE9850" />

            <corners android:radius="@dimen/layout_margin_lss" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />
            <corners android:radius="@dimen/layout_margin_lss" />
        </shape>
    </item>

</selector>